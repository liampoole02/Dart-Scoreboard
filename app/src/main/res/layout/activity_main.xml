<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Player 1 Name"
        android:layout_below="@id/spinner"
        android:id="@+id/player1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Player 1 Score"
        android:id="@+id/player1score"
        android:layout_below="@+id/player1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Score"
        android:id="@+id/add1"
        android:layout_below="@+id/player1score"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Player 2 Name"
        android:layout_below="@id/spinner"
        android:id="@+id/player2"
        android:layout_toRightOf="@+id/player1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Player 2 Score"
        android:layout_below="@id/player2"
        android:layout_toRightOf="@id/player1score"
        android:id="@+id/player2score"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/player1score"
        android:text="Add Score"
        android:id="@+id/add2"
        android:layout_below="@+id/player2score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add1"
        android:hint="Score remaining"
        android:id="@+id/player1remain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Score remaining"
        android:layout_below="@id/add2"
        android:layout_toRightOf="@id/player1remain"
        android:id="@+id/player2remain"/>

</RelativeLayout>